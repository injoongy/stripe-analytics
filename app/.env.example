# Database & Redis
# When using Docker Compose, these are automatically set - no need to uncomment
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/database
# REDIS_URL=redis://redis:6379

# For local development without Docker, uncomment and use:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/database
# REDIS_URL=redis://localhost:6379

# Authentication
BETTER_AUTH_SECRET=your-secret-here-change-this

# Application
CLIENT_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Email (Resend)
RESEND_KEY=your-resend-api-key

# Encryption (generate with: openssl rand -hex 32)
# Use the SAME key in both app/.env and jobs/.env
STRIPE_SECRET_ENCRYPTION_KEY=your-32-byte-hex-key-here
